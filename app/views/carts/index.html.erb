<div class="container grid w-11/12 sm:w-8/12">
    <h1 class="text-red-900 font-bold md:text-2xl text-xl">Your Cart</h1>
</div>
<div class="flex justify-center my-6">
    <div class="flex flex-col w-full p-8 rounded-lg text-gray-800 bg-white bg-opacity-20 shadow-lg pin-r pin-y md:w-4/5 lg:w-4/5">
        <div class="flex-1">
            <table class="w-full text-sm lg:text-base" cellspacing="0">
                <thead>
                    <tr class="h-12 uppercase">
                        <th class="hidden md:table-cell"></th>
                        <th class="text-left">Product</th>
                        <th class="lg:text-right text-left pl-5 lg:pl-0">
                            <span class="lg:hidden" title="Quantity">Qty</span>
                            <span class="hidden lg:inline">Quantity</span>
                        </th>
                        <th class="hidden text-right md:table-cell">Unit price</th>
                        <th class="text-right">Total price</th>
                    </tr>
                </thead>


                <tbody>

                    <% sum_arr = [] %>
                    <% if @cartlisting.length == 0 %>
                        <tr><td></td><td class="hidden pb-4 md:table-cell">You have no items in your cart.</td></tr>
                    <% else %>
                        <% @cartlisting.each do |cartlisting| %>
                            <% listing = Listing.find_by(id: cartlisting.listing_id) %>
                            <tr>
                                <td class="hidden pb-4 md:table-cell"> <%= link_to(image_tag(url_for(listing.image), class: "w-20 rounded" , alt:
                                        listing.name), listing_show_path(listing.id), target: :_blank) %> </td>
                                <td>
                                    <p class="mb-2 md:ml-4"><%= link_to listing.name, listing_show_path(listing.id), target: :_blank %></p>
                                    
                                        <%= link_to(button_tag("<small><i class='fas fa-trash-alt w-4 text-red-600  hover:text-red-800'></i> Remove item</small>".html_safe, class:'text-gray-700 md:ml-4'), cart_delete_path(cartlisting), method: "delete", data: { confirm: 'Are you sure you want to remove this item?' }) %>
                                </td>
                                <td class="justify-center md:justify-end md:flex mt-6">
                                    <div class="w-20 h-10">
                                        <div class="relative flex flex-row w-full h-8">
                                            <%= form_tag("/cart/#{cartlisting.id}", method: "put", class: "contents") do |form| %>
                                                <%= number_field_tag 'quantity', cartlisting.quantity,
                                                class:"font-semibold text-center text-gray-700 bg-white outline-none focus:outline-none hover:text-black focus:text-black", min: 1, style:"width:80px;" %>
                                                <%= button_tag "<i class='fas fa-pen-alt'></i>".html_safe, type: "submit", class: "pl-2 text-blue" %>
                                            <% end %>
                                            
                                        </div>
                                    </div>
                                </td>
                                <td class="hidden text-right md:table-cell">
                                    <% price = listing.price %>
                                        <span class="text-sm lg:text-base font-medium"><%= number_to_currency(price/100) %></span>
                                    
                                </td>
                                <td class="text-right">
                                    <span class="text-sm lg:text-base font-medium">
                                        <% subtotal=price/100 * cartlisting.quantity %>
                                            <% sum_arr << subtotal %><%= number_to_currency(subtotal) %>
                                    </span>
                                </td>
                            </tr>
                        <% end %>
                    <% end %>
                </tbody>
            </table>
            <hr class="pb-6 mt-6 border-black">

            <div class="my-4 mt-6 -mx-2 lg:flex">
                <div class="lg:px-2 lg:w-1/2">
                    <div class="p-4 bg-gray-100 rounded-full">
                        <h1 class="ml-2 font-bold uppercase">Instruction for seller</h1>
                    </div>
                    <div class="p-4">
                        <p class="mb-4 italic">If you have some information for the seller you can leave them in the box
                            below</p>
                        <textarea class="w-full h-24 p-2 bg-gray-100 rounded"></textarea>
                    </div>
                </div>

                <div class="lg:px-2 lg:w-1/2">
                    <div class="p-4 bg-gray-100 rounded-full">
                        <h1 class="ml-2 font-bold uppercase">Order Details</h1>
                    </div>
                    <div class="p-4">
                        <p class="mb-6 italic">Shipping and additionnal costs are calculated based on values you have
                            entered</p>
                        <div class="flex justify-between border-b">
                            <div class="lg:px-4 lg:py-2 m-2 text-lg lg:text-xl font-bold text-center text-gray-800">
                                Subtotal </div>
                            <div class="lg:px-4 lg:py-2 m-2 lg:text-lg font-bold text-center text-gray-900">
                                <% totalprice = sum_arr.sum %>
                                    <%= number_to_currency(totalprice*0.90) %>
                            </div>
                        </div>

                        <div class="flex justify-between pt-4 border-b">
                            <div class="lg:px-4 lg:py-2 m-2 text-lg lg:text-xl font-bold text-center text-gray-800">
                                Tax (inclusive)
                            </div>
                            <div class="lg:px-4 lg:py-2 m-2 lg:text-lg font-bold text-center text-gray-900">
                                <%= number_to_currency(totalprice*0.10) %>
                            </div>
                        </div>
                        <div class="flex justify-between pt-4 border-b">
                            <div class="lg:px-4 lg:py-2 m-2 text-lg lg:text-xl font-bold text-center text-gray-800">
                                Total
                            </div>
                            <div class="lg:px-4 lg:py-2 m-2 lg:text-lg font-bold text-center text-gray-900">
                                <%= number_to_currency(totalprice) %>
                            </div>
                        </div>
                        <button id="checkout-button" data-stripe="payment"
                            class="flex justify-center w-full px-10 py-3 mt-6 font-medium text-white uppercase bg-gray-800 rounded-full shadow item-center hover:bg-gray-700 focus:shadow-outline focus:outline-none">
                            <i class="far fa-credit-card w-8"></i> <span class="ml-2 mt-5px">Procceed to checkout (<%= number_to_currency(totalprice) %>)</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://js.stripe.com/v3/"></script>
<% if @cartlisting.length > 0 %>
    <script type="text/javascript">
        
            // Create an instance of the Stripe object with your publishable API key
            document.querySelector('[data-stripe="payment"]').addEventListener("click", () => {
                const stripe = Stripe("<%= Rails.application.credentials.dig(:stripe, :public_key) %>");
                stripe.redirectToCheckout({
                    sessionId: "<%= @session_id %>"
                });
            });
        
    </script>
<% end %>
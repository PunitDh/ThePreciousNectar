

<%= @listing.name %>

<%= @listing.description %>

<% if @listing.image.attached? %>
        <%= image_tag url_for(@listing.image) %>
<% end %>


<%= link_to "Delete Listing", listing_delete_path(@listing.id), method: "delete", data: {confirm: "Are you sure you want to delete this listing? This action cannot be undone."} %>
<%= link_to "Edit Listing", listing_edit_path(@listing.id), method: "get" %>
<%= link_to "Add to Cart", cart_add_path(current_user.cart.id, @listing.id), method: "put" %>
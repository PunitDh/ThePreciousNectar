<div class="w-full mx-auto rounded-xl p-10 text-gray-800 relative overflow-hidden min-w-80 max-w-7xl">
    <div class="relative mt-1">
        <%= form_tag(search_page_path, :method => "get", class: 'navbar-form navbar-left') do %>  
            <%= search_field_tag :query, params[:query], class: "form-control w-full h-16 px-3 rounded mb-8 focus:outline-none focus:shadow-outline text-xl px-8 shadow-lg", placeholder: "Search..." %>
            <%= button_tag "<i class='fas fa-search'></i>".html_safe, class: "block w-7 h-7 text-center text-xl leading-0 absolute top-4 right-4 text-gray-400 focus:outline-none hover:text-gray-900 transition-colors", name: nil %>
        <% end %>
    </div>
</div>
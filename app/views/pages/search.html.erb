<section class="bg-indigo-dark h-50 p-8">
    <div class="container mx-auto py-8">
        <%= form_tag(search_page_path, :method => "get", class: 'navbar-form navbar-left') do %>  
            <div class="input-group">  
                <%= search_field_tag :search, params[:search], placeholder: "Search", class: "form-control w-full h-16 px-3 rounded mb-8 focus:outline-none focus:shadow-outline text-xl px-8 shadow-lg" %>  
                <div class="input-group-btn">  
                    <%= button_tag "", :class => 'btn btn-info glyphicon glyphicon-search',:name => nil%>  
                </div>  
            </div>  
        <% end %>
    </div>
</section>

<h3>Search Result</h3>  

    <% @results.each do |result| %>  
        <%= result.name %><br>  
    <% end %>
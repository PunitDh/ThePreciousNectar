<h1 class="ml-0 md:ml-40 sm:ml-10 text-center sm:text-left pt-16 text-2xl font-bold antialiased">Search Results</h1>

<!-- The search page and index page uses the same partial that displays results of listings index -->
<%= render "shared/searchbar" %>

<% if @listings.nil? and !params[:query].nil? %>
    <div class="ml-10 sm:ml-40">Your search returned no results.</div>
<% else %>
    <%= render "shared/searchresults" %>
<% end %>